@using System.Collections
@using Clases
@model IEnumerable<Usuario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class= "colcol-sm-6" >
            <h3 class="align-content-center">Lista Usuarios</h3>
        </div>
    </div>
    @if (TempData ["mensaje"] != null){
    <div class="alert alertalert-warning alert-alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="close" data-data-dismiss="alert" ariaaria-label="close">
            <span ariaaria-hidden="true">
                &times;
            </span>
        </button>

    </div>
    }
<div class="table table-bordered ">
    <table>
        <thead>
            <tr>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Cedula</th>
              <th>Edad</th>
              <th>Email</th>
            </tr>
        </thead>
        <tbody>
                @foreach(Usuario usuario in Model)
                {
                   <tr>
                   <td>@usuario.Nombre</td> 
                   <td>@usuario.Apellido</td> 
                   <td>@usuario.Cedula</td> 
                   <td>@usuario.Edad</td> 
                   <td>@usuario.Email </td> 
                   <td class="border">
                       <a class="btn btn-warning"
                       asp-controller="Usuario" asp-action="Edit" asp-route-id="@usuario.Id"
                       >
                           
                           Editar
                       </a>
                       <a class="btn btn-danger"
                       asp-controller="Usuario" asp-action="Delete" asp-route-id="@usuario.Id"
                       >
                           Borrar
                       </a>
                   </td>
                   </tr>
                }     
        </tbody>
    </table>
    <div class="col-sm-6">
        <a class="btn btn-success d-block" 
        asp-controller = "Usuario" asp-action="Create"
        >
            Crear nuevo Usuario
        </a>
        </div>
</div>
</div>

