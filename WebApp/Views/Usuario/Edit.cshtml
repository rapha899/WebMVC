@using Clases
@model Usuario

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Editar Usuario</h1>
<div class="container">
 <div class="row">
<div class="col-sm-12">
</div>
</div>
<div class="row">
    <div class="col-sm-10">
        <form method="post" asp-action="Edit">
            <div class="form-group">
                <label class="custom-control-label">Nombre</label>
                <input class="form-control" asp-for="Nombre"/>
            </div>
             <div class="form-group">
                <label class="custom-control-label">Apellido</label>
                <input class="form-control" asp-for="Apellido"/>
            </div>
             <div class="form-group">
                <label class="custom-control-label">Cedula</label>
                <input class="form-control" asp-for="Cedula"/>
            </div>
             <div class="form-group">
                <label class="custom-control-label">Correo</label>
                <input class="form-control" asp-for="Email"/>
            </div>
             <div class="form-group">
                <label class="custom-control-label">Edad</label>
                <input class="form-control" asp-for="Edad"/>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Actualizar Usuario" />
            </div>
        </form>
</div>
</div>

</div>