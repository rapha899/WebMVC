@using Clases
@model Tarjeta
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h1>Creacion Tarjeta</h1>

<div class="container">
 <div class="row">
<div class="col-sm-12">
    <h3>Nueva Tarjeta</h3>
</div>
</div>
<div class="row">
    <div class="col-sm-10">
        <form method="post" asp-action="Create">
            <div class="form-group">
                <label class="custom-control-label">Nombre Tarjeta</label>
                <input class="form-control" asp-for="NombreTarjeta"/>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Crear Tarjeta" />
            </div>
        </form>
</div>
</div>
</div>