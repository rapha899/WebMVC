@using System.Collections
@using Clases
@model IEnumerable<Tarjeta>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista Usuarios</h1>
<p>Lista de usuraios para solicitud de tarjeta de credito</p>
<div class="container">
    <div class="row">
        <div class= "colcol-sm-6">
            <h3>Lista Usuarios</h3>
        </div>
        <div class="col-sm-6">
        <a class="btn btn-success d-block" 
        asp-controller = "TarjetaController1" asp-action="Create"
        >
            Crear nueva Tarjeta
        </a>
        </div>
    </div>
    @if (TempData ["mensaje"] != null){
    <div class="alert alertalert-warning alert-alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="close" data-data-dismiss="alert" ariaaria-label="close">
            <span ariaaria-hidden="true">
                &times;
            </span>
        </button>

    </div>
    }
<div class="row">
    <table>
        <thead>
            <tr>
              <td>Id</td>
              <td>Nombre Tarjeta</td>
            </tr>
        </thead>
        <tbody>
                @foreach(Tarjeta tarjeta in Model)
                {
                   <tr>
                   <td>@tarjeta.NombreTarjeta</td> 
                   <td>
                       <a class="btn btn-warning"
                       asp-controller="TarjetaController1" asp-action="Edit" asp-route-id="@tarjeta.Id"
                       >
                           
                           Editar
                       </a>
                       <a class="btn btn-danger"
                       asp-controller="TarjetaController1" asp-action="Delete" asp-route-id="@tarjeta.Id"
                       >
                           Borrar
                       </a>
                   </td>
                   </tr>
                }     
        </tbody>
    </table>
</div>
</div>

